<p id="notice"><%= notice %></p>

<% @article.pictures.each do |picture| %>
  <%= cl_image_tag(picture.key,
      width: 400, height: 300, crop: :fill) %>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<%= link_to 'Edit', edit_article_path(@article) %> |
